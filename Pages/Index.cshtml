@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<br />
<br />
<div class="row">

    <h2>Registered Student Data</h2>
    <hr />
    <table class="table">
    
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Father Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Age</th>
                <th scope="col" colspan="2" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.student)
            {

                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.FatherName</td>
                    <td>@item.Email</td>
                    <td>@item.phone</td>
                    <td>@item.Age</td>
                    <td>
                        <a class="btn btn-primary" asp-page="update" asp-route-id="@item.Id">
                            update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger"  asp-page-handler="Delete" asp-route-id="@item.Id">
                            Remove
                        </a>
                    </td>

                </tr>
            
            }
            
            
                
        </tbody>
    </table>

</div>

